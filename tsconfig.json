{
    "compilerOptions": {
        "target": "ES2020",
        "module": "none",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noEmit": false,
        "removeComments": false,
        "declaration": false,
        "sourceMap": false,
        "noUncheckedIndexedAccess": true,
        "verbatimModuleSyntax": false,
        "importsNotUsedAsValues": "remove"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
    ]
}
