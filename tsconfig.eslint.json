// Necessary for eslint to lint the eslint.config.js file itself.
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "node"
        ],
        "lib": [
            "ESNext"
        ],
        "allowJs": true,
        "moduleResolution": "nodenext"
    },
    "include": [
        // this file cannot be put in the tsconfig.json file because we don't
        // actually want to compile it
        "eslint.config.js",
    ]
}
